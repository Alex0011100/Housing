<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wqcf.kanfang"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.wqcf.kanfang.SplashActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wqcf.kanfang.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.wqcf.kanfang.InfoListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.wqcf.kanfang.LiveActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.wqcf.kanfang.InfoActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.wqcf.kanfang.OrderActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.wqcf.kanfang.LoginActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.wqcf.kanfang.RegisterActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.wqcf.kanfang.NewInfoListActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>