<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_color_white" >

    <RelativeLayout
        android:id="@+id/RLayout_act_order_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/black_bg_tab_light" >

        <ImageView
            android:id="@+id/Img_back_infolist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/Txt_title_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="预定"
            android:textColor="@color/font_color_white"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/RLayout_act_order_top" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/font_color_white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_gray_stroke"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/Img_act_order_Photo"
                        android:layout_width="170dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beauty" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/Txt_act_order_Name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="NAME"
                            android:textColor="@color/black_txt" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="所属公司："
                            android:textColor="@color/red2"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/Txt_act_order_Company"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="2222"
                            android:textSize="12sp"
                            android:textColor="@color/black_txt" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="所属门店："
                            android:textColor="@color/red2"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/Txt_act_order_Shop"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="2222"
                            android:textSize="12sp"
                            android:textColor="@color/black_txt" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/black_bg_tab_light"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/Txt_act_order_Phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/phone"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="18200000000"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="支付方式" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_gray_stroke"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/Rlayout_act_order_AlibabaPay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="支付宝支付"
                        android:textSize="22sp" />

                    <ImageView
                        android:id="@+id/Img_act_order_AlibabaPay_choose"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/circle_red"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/Img_act_order_AlibabaPay_unchoose"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/duigou_empty"
                        android:visibility="invisible" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_line" />

                <RelativeLayout
                    android:id="@+id/Rlayout_act_order_WeChatPay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="微信支付"
                        android:textSize="22sp" />

                    <ImageView
                        android:id="@+id/Img_act_order_WechatPay_choose"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/circle_red"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/Img_act_order_WechatPay_unchoose"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/duigou_empty"
                        android:visibility="invisible" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_line" />

                <RelativeLayout
                    android:id="@+id/Rlayout_act_order_UnionPay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="银联支付"
                        android:textSize="22sp" />

                    <ImageView
                        android:id="@+id/Img_act_order_UnionPay_choose"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/circle_red"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/Img_act_order_UnionPay_unchoose"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/duigou_empty"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>
			<TextView
			    android:layout_height="40dp"
			    android:layout_width="match_parent"
			    android:layout_marginLeft="40dp"
			    android:layout_marginRight="40dp"
			    android:layout_marginTop="20dp"
			    android:background="@color/red2"
			    android:text="确认预定"
			    android:textColor="@color/white"
			    android:layout_gravity="center_vertical"
			    android:textSize="15sp"
			    android:gravity="center"/>
			<View
			    android:layout_height="0.5dp"
			    android:layout_width="match_parent"
			    android:layout_marginLeft="10dp"
			    android:layout_marginRight="10dp"
			    android:layout_marginTop="20dp"
			    android:background="@color/gray_line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="此经纪人的其他房源" />

            <com.wqcf.kanfang.ui.view.ListViewNoScroll
                android:id="@+id/ListView_act_order_rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:dividerHeight="5dp"
                android:listSelector="#00000000" />
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>