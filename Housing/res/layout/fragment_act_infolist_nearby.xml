<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/yellow_main_bg"
        android:orientation="horizontal" >

        <com.wqcf.kanfang.ui.view.ParamTextView
            android:id="@+id/tv_tingshi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="厅室"
            android:textColor="@color/font_color_white" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/font_color_white" />

        <com.wqcf.kanfang.ui.view.ParamTextView
            android:id="@+id/tv_zujin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="租金"
            android:textColor="@color/font_color_white" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/font_color_white" />

        <com.wqcf.kanfang.ui.view.ParamTextView
            android:id="@+id/tv_zhibo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="直播"
            android:textColor="@color/font_color_white" />
    </LinearLayout>



    <com.wqcf.kanfang.opensrc.xlistview.XListView
        android:id="@+id/ListView_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:listSelector="#00000000" />

</LinearLayout>